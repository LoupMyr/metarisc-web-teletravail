<div class="grid-3">

  {% for post in postslist | reverse %}

    <div class="card mb-3" style="border: none">
      <a href="{{ post.url | url }}">
        <img src="{{ post.data.image_url | url }}" class="card-img-top">
      </a>
      <div class="card-body">
        <h5 class="card-title">
          <a href="{{ post.url | url }}" class="text-dark">
            <strong>{{post.data.title}}</strong>
          </a>
        </h5>
        <p class="card-text">{{post.data.description}}</p>
        <p class="card-text"><small class="text-muted">Post√© le {{ post.date | date: "%b %d, %y" }}</small></p>
      </div>
    </div>

  {% endfor %}

</div>